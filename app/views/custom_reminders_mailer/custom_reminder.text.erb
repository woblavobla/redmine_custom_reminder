<%= l(:mail_custom_reminder_subject, :count => @issues.size) %>:

<% @projects.each do |project| %>
  - <%= project.name %>
  <% @issues.select{|i| i.project == project}.each do |issue| -%>
    * <%= "#{issue.project} - #{issue.tracker} ##{issue.id}: #{issue.subject}" %>
  <% end -%>
<% end %>

<%= @issues_url %>